@{
        Layout = "~/_MainLayout.cshtml";
        Page.Title = "Gebruikers";
        var db = Database.Open("database");
        var users = db.Query("SELECT * FROM UserProfile");
}

<table id="ViewUserTable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Voornaam</th>
                <th>Achternaam</th>
                <th>Geslacht</th>
                <th>Telefoonnummer</th>
                <th>Email-Adres</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>  
                <td> @user.voornaam </td>
                <td> @user.achternaam</td>
                <td> @if(user.geslacht == 1)
                     {
                         <text>Man</text> 
                     }
                     else if (user.geslacht == 2)
                     {
                         <text>Vrouw</text>
                     }
                </td>
                <td> @user.telefoonnummer</td>
                <td> @user.email</td>
                <td><a href="~/admin/users/edituser?user=@user"><button type="button" class="tablebutton btn btn-primary">Edit</button></a></td>
                <td><a href="~/admin/users/deleteuser?user=@user"><button type="button" class="tablebutton btn btn-danger">Delete</button></a></td>
                </tr>
            }
           
            
        </tbody>
     <tfoot>
            </tfoot>
    

    </table>