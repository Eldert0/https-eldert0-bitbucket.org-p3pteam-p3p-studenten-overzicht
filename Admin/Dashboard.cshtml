@{
        Layout = "~/_MainLayout.cshtml";
        Page.Title = "Dashboard";

        var db = Database.Open("database");
        var getAllUsers = db.Query("SELECT RoleId, COUNT(RoleId) as count FROM webpages_UsersInRoles GROUP BY RoleId");
        var getAllStudents = db.Query("SELECT id FROM students");
        

        var numUsers = 0;
        var numAdmin = 0;
        var numStudents = getAllStudents.Count();
        

        foreach(var k in getAllUsers){
            if(k.RoleId == 2)
            {
                numUsers = k.count;
            }
             if(k.RoleId == 1)
             {
                numAdmin = k.count;
            }
        }  
}
